// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Count {
  id Int @id @default(autoincrement())
  count Int
}

model LogEntry {
  id Int @id @default(autoincrement())
  level String
  session String 
  dateTime DateTime
  message String
}


model Metric {
  id Int @id @default(autoincrement())
  session String
  dateTime DateTime
  category String
  operation String
  params String
  measurement String
}
