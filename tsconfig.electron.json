{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": false,
    "declaration": true,
    "outDir": "out",
    "rootDir": "src",
    "sourceMap": true,
    "lib": [
      "es5",
      "es6"
    ]
  },
  "include": ["./src/electron/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ]
}
