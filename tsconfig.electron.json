{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": false,
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "lib": ["es6"]
  },
  "include": ["src/electron/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ]
}
